        "tags": [
          "events"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/yang-data+json": {
              "example": {
                "input": {
                  "stream": "Cisco-IOS-XE-platform-events-oper:events",
                  "encoding": "encode-json",
                  "update-trigger": "periodic",
                  "period": 6000
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Subscription created",
            "content": {
              "application/yang-data+json": {
