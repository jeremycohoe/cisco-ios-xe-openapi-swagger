{
  "openapi": "3.0.0",
  "info": {
    "title": "tailf-netconf-extensions RPCs",
    "description": "Tail-f NETCONF Extensions - Additional NETCONF capabilities for enhanced device management",
    "version": "2020-06-29"
  },
  "servers": [
    {
      "url": "https://{device}/restconf",
      "variables": {
        "device": {
          "default": "10.1.1.1",
          "description": "Device IP or hostname"
        }
      }
    }
  ],
  "paths": {
    "/operations/tailf-netconf-extensions:has-children": {
      "post": {
        "tags": ["Tail-f Extensions"],
        "summary": "Check if a node has child elements",
        "description": "Determine whether a specific data node has child elements without retrieving full data",
        "operationId": "hasChildren",
        "requestBody": {
          "required": true,
          "content": {
            "application/yang-data+json": {
              "schema": {
                "type": "object",
                "properties": {
                  "input": {
                    "type": "object",
                    "properties": {
                      "path": {
                        "type": "string",
                        "description": "XPath to the node to check"
                      }
                    },
                    "required": ["path"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Check completed",
            "content": {
              "application/yang-data+json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "output": {
                      "type": "object",
                      "properties": {
                        "has-children": {
                          "type": "boolean",
                          "description": "True if node has children"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/operations/tailf-netconf-extensions:get-attributes": {
      "post": {
        "tags": ["Tail-f Extensions"],
        "summary": "Retrieve node attributes",
        "description": "Get metadata attributes for data nodes (tags, annotations, etc.)",
        "operationId": "getAttributes",
        "requestBody": {
          "required": true,
          "content": {
            "application/yang-data+json": {
              "schema": {
                "type": "object",
                "properties": {
                  "input": {
                    "type": "object",
                    "properties": {
                      "path": {
                        "type": "string",
                        "description": "XPath to the node"
                      },
                      "attribute-names": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "description": "List of attribute names to retrieve"
                      }
                    },
                    "required": ["path"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Attributes retrieved",
            "content": {
              "application/yang-data+json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "output": {
                      "type": "object",
                      "properties": {
                        "attributes": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "name": {
                                "type": "string"
                              },
                              "value": {
                                "type": "string"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  },
  "security": [
    {
      "basicAuth": []
    }
  ]
}
